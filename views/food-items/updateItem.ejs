<%- include("../partials/NavbarDashboard"); -%>


<div class="container-fluid scroll">
  <div class="row dashboard">
    <%- include("../partials/sidebarMenu"); -%>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 transition-fade" id="swup">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Modify The Data</h1>
      </div>
      <form class="needs-validation" action="/edititem/<%=rows[0].item_id%>" method="post" novalidate>
        <div class="row g-3">

          <div class="col-sm-6" style="display: none;">
            <input type="text" id="disabledTextInput" name="itemID" class="form-control" value="<%=rows[0].item_id%>"
              placeholder="<%=rows[0].item_id%>">
          </div>

          <div class="col-sm-6">
            <label for="itemName" class="form-label">Item Name:</label>
            <input type="text" class="form-control" id="itemName" name="itemName" required autocomplete="off"
              value="<%=rows[0].item_name%>" placeholder="Item Name">
            <div class="invalid-feedback">
              Valid Item Name is required.
            </div>
          </div>

          <div class="col-sm-6">
            <label for="itemAvailability" class="form-label">Unavailable:</label>
            <select class="form-select form-select mb-3" aria-label=".form-select-lg example" name="itemAvailability"
              id="itemAvailability">
              <option value="Available" <% if(rows[0].item_availability=='Available' ) {%> selected <% } %>>
                Available
              </option>
              <option <% if(rows[0].item_availability=='Unavailable' ) {%> selected <% } %>>
                Unavailable
              </option>
            </select>
          </div>

          <div class="col-sm-6">
            <label for="itemPrice" class="form-label">Item Price:</label>
            <input type="number" class="form-control" id="itemPrice" name="itemPrice" required autocomplete="off"
              value="<%=rows[0].item_price%>">
            <div class="invalid-feedback">
              Please enter a valid Amount.
            </div>
          </div>

          <div class="col-sm-6">
            <label for="itemCategory" class="form-label">Item Category:</label>
            <select class="form-select form-select mb-3" aria-label=".form-select-lg example" name="itemCategory"
              id="itemCategory" required>
              <option value="Food" selected>Food</option>
              <option value="Desserts">Desserts</option>
              <option value="Beverages">Beverages</option>
            </select>
          </div>

          <div class="col-12">
            <div class="form-floating">
              <textarea class="form-control" placeholder="Add a Long Description" id="floatingTextarea2"
                style="height: 200px" name="itemLDescription"><%=rows[0].item_long_description%></textarea>
              <label for="floatingTextarea2">Long Description</label>
            </div>
          </div>

        </div>
        <hr class="my-4">
        <button class="w-100 btn btn-danger btn-lg" type="submit">Create a New Entry</button>
      </form>
      <%- include("../partials/ErrorToast"); -%>
  </div>
  </main>
</div>
<%- include("../partials/footer"); -%>