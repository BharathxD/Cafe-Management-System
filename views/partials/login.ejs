<body>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 transition-fade login-main">
        <div
            class="login-controller">
            <div class="login-bg"></div>
        <form class="form-container" action="/login" method="post">
            <h1 class="signin-header">Café Login</h1>
        
            <div class="form-floating input-field">
              <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="getLoginUsername" autocomplete="off">
              <label>Username</label>
            </div>
            <div class="form-floating input-field">
              <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="getLoginPassword">
              <label for="floatingPassword">Password</label>
            </div>
            <button class="w-100 btn btn-lg login-btn" type="submit">Sign in</button>
            <a type="button" href="/register" class="w-100 btn btn-lg login-btn register-btn">Register</a>
            <p class="mt-3 mb-2 text-muted" style="text-align: center;">© Café Management 2021-22</p>
            <% if(status) {%>
              <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-top: 20px;">
                <h4 class="alert-heading">Updation Completed</h4>
                <hr>
                <p>Head back to <a href="/ourteam" class="alert-link">Crew Page</a></p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          </form>
          </div>
        </div>
    </main>

  <%- include("../partials/footer"); -%>